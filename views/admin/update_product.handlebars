<div class="create_product">
<div class="container">
  <formmethod="POST" action="{{this.product_id}}/saving">
    <h1 align="center">Update Product</h1>
    <div class="row">   
      <div class="col-25">
        <label for="product_name">Product Name:</label>
      </div>
      <div class="col-75">
       <input id="product_name" value="{{this.product_name}}" name="product_name" type="text" required >
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="category_id">Category:</label>
      </div>
      <div class="col-75">
        <select id="category_id" name="category_id" required>
            {{#each brand.[0]}}
                <option value="{{this.category_id}}">{{this.category_name}}</option>
            {{/each}}
        </select>
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="brand_id">Brand:</label>
      </div>
      <div class="col-75">
       <select id="brand_id" name="brand_id" required>
          {{#each brand.[1]}}
            <option value="{{this.brand_id}}">{{this.brand_name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

     <div class="row">
      <div class="col-25">
        <label for="product_price">Price:</label>
      </div>
      <div class="col-75">
       <input id="product_price" value="{{this.product_price}}" name="product_price" type="number" required >
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="product_description">Description:</label>
      </div>
      <div class="col-75">
        <textarea id="product_description" name="product_description" type="text" rows="3" maxlength="255" style="height:100px">{{this.product_description}}</textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="brand_tagline">Tagline:</label>
      </div>
      <div class="col-75">
      <input id="brand_tagline" value="{{this.brand_tagline}}" name="brand_tagline" type="text">
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="product_picture">Product Image:</label>
      </div>
      <div class="col-75">
      <input id="product_picture" value="{{this.product_picture}}" name="product_picture" type="text" maxlength="500">
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="warranty">Warranty:</label>
      </div>
      <div class="col-75">
       <input id="warranty" value="{{this.warranty}}" name="warranty" type="number">
      </div>
    </div>


    <div class="row">
      <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg" title="Submit">Submit</button>
      </div>
    </div>

  </form>
</div>
</div>
