<div class="container-fluid" align="center" style="width: 70%; margin: 50px auto">
  <div class="row">
    <div class="col-md-12">
      <div class="modal-header" align="center">
        <h3>SIGNUP MEMBER</h3>
      </div>
      <form method="POST" action="/signup">
        <div class="modal-body">
          <input hidden name="user_type" value="customer">
          <div class="form-group" style="width: 80%;">
            <label style="float:left">First Name</label>
            <input class="form-control" type="text"  name="first_name" placeholder="Juan" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Last Name</label>
            <input class="form-control" type="text"  name="last_name" placeholder="Dela Cruz" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Street</label>
            <input class="form-control" type="text"  name="street" placeholder="Street" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Municipality</label>
            <input class="form-control" type="text"  name="municipality" placeholder="Municipality" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Province</label>
            <input class="form-control" type="text"  name="province" placeholder="Province" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Zipcode</label>
            <input class="form-control" type="text"  name="zipcode" placeholder="Zipcode (eg. 1016)" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Email Address</label>
            <input class="form-control" type="email"  name="customer_email" placeholder="Email Address" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Password</label>
            <input class="form-control" type="password" name="password" placeholder="Password" required>
          </div>
          <div class="form-group" style="width: 80%;">
            <label style="float:left">Confirm Password</label>
            <input class="form-control" type="password" name="confirm_password" placeholder="Confirm Password" required><br>.
            <p>Already a member?&ensp;<a href="/login">Login Here</a></p>
          </div>
          <div class="modal-footer">
            <input style="margin-left: auto; margin-right: auto; width: 50%" type="submit" name="login" class="btn btn-md" value="Register">
          </div>
        </div>
      </form>
    </div>
  </div>