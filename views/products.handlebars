<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center" style="margin-top: 25pt">
			<h1><strong>{{title}}</strong></h1>
		</div>
	</div>

	<div class="row">
		
		{{#each data}}		
		<div class="responsive">
		<div class="container col-lg-12" style="margin-top: 25pt; width: 420pt; margin-right: 18pt" >			
			<div class="w3-display-container w3-hover-opacity" >
			<div class="container_pic">
			<img style="max-width: 530px; height: 405px" src="{{this.picture}}" alt="Product">
			<div class="w3-display-middle w3-display-hover w3-xlarge">
				<a href="/products/{{this.id}}"><button class="w3-button w3-green">Buy</button></a>
			</div>
			<div class="text">
				<h4>{{this.name}}</h4>
				<p>{{this.brand}}</p>
			 </div>
			 </div>
			</div>
			</div>
			</div>			
		{{/each}}
		
	</div>
	<div class="form-group">
		<div class="text-center">
			<a href="/product/create"><button type="submit" class="btn btn-primary btn-lg" title="Submit">ADD Product</button></a>
		</div>
	</div>
</div>



